<odoo>


        <record model="ir.actions.act_window" id="act_complaint_graph">
            <field name="name">complaints</field>
            <field name="res_model">complaints.complaint</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="complaints.complaints_complaint_graph_view"/>
        </record>
        <record model="ir.actions.act_window" id="act_complaint_calendar">
            <field name="name">complaints</field>
            <field name="res_model">complaints.complaint</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="complaints.complaints_complaint_calendar_view"/>
        </record>
        <record model="ir.actions.act_window" id="act_complaint_list">
            <field name="name">Complaints</field>
            <field name="res_model">complaints.complaint</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="dashboard_form_view">
            <field name="name">Complaint Dashboard Form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <!--<button name="complaint_form">ADD COMPLAINT</button>-->

                    <board style="1">
                        <!--<column>-->
                         <!--<action-->
                            <!--string="Complaints"-->
                            <!--name="%(act_complaint_list)d"/>-->
                        <!--</column>-->
                        <column>
                            <action
                                string="Complaints by status"
                                name="%(complaints.act_complaint_graph)d"/>
                            <!--<action-->
                                <!--string="Complaints"-->
                                <!--name="%(act_complaint_calendar)d"/>-->
                        </column>
                    </board>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="open_board_complaint">
          <field name="name">Dashboard</field>
          <field name="res_model">board.board</field>
          <field name="view_mode">form</field>
          <field name="usage">menu</field>
          <field name="view_id" ref="dashboard_form_view"/>
        </record>

        <menuitem
            name="Dashboard" parent="complaints.main_complaint_menu"
            action="open_board_complaint"
            sequence="1"
            id="menu_dashboard"/>

</odoo>
